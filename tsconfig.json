{
  "exclude": [
    "node_modules","out"
  ],
  "include": ["src", "extension.d.ts" ],
  "compileOnSave": true,
  "compilerOptions": {
    "module": "NodeNext",
    "moduleResolution": "nodenext",
    "target": "ESNext",
    "baseUrl": ".",
    "declaration": true,
    "outDir": "./out",
    "rootDir": "./src",
    "allowJs": true,
    "strict": true,
    "strictNullChecks": false,
    "esModuleInterop": true, 
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "noEmit": false,
    "skipLibCheck": true, 
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,  
    "noImplicitAny": false,
    "typeRoots": [
      "./node_modules/@types"
    ],
    "paths": {
      "ucbuilder/*": [ "./src/*" ],
      "@ucbuilder/*": [ "./src/*" ]
    }
  }
}