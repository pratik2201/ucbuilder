{
  "exclude": [ "node_modules",  "out"  ],
  "include": [ ".",  "ucbuilder/extension.d.ts" ],
  "compileOnSave": true,
  "compilerOptions": {
    "types": [  "ucbuilder/extension.d.ts" ],
    "module": "NodeNext",
    "moduleResolution": "nodenext",
    "target": "ESNext",
    "baseUrl": ".",
    "outDir": "./out",
    "rootDir": ".",
    "declaration": true,
    "sourceMap": true,
    "allowJs": true,
    "strict": true,
    "strictNullChecks": false,
    "esModuleInterop": true, 
    "checkJs": false,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "noEmit": false,
    "skipLibCheck": true, 
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "removeComments": false,
    "noImplicitAny": false,
  },
}